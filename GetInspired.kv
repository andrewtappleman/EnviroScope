<GetInspired>:
    name: "GetInspired"
	canvas.before:
		Color:
			rgba: 0.8, 1, 0.698, 1
		Rectangle:
			pos: self.pos
			size: self.size
	BoxLayout:
		pos: 55,100
		size_hint: 0.8, 0.8
		orientation: 'vertical'
		Button:
			text: 'Collective Impact'
			on_press:
				root.manager.current = 'CollectiveImpact'
			size: self.texture_size
			pos: 45,675
			
			background_color: 0.0, 0.447, 0.071, 1
		
		Button:
			text: 'Famous Advocate, Greta Thunberg'
			on_press:
				root.manager.current = 'GretaThunberg'
			size: self.texture_size
			pos: 45, 425
			
			background_color: 0.0, 0.447, 0.071, 1
	
	Button:
		text: 'Back'
		on_press:
			root.manager.current = 'EnvironmentalIssues'
		size_hint: 0.16, 0.1
		pos: 0, 0
		
		background_color: 0.0, 0.447, 0.071, 1


