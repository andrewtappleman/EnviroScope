<SocialMedia>:
    name: "SocialMedia"
	background_color: 0.4196, 0.7922, 0.9569, 1
    canvas.before:
        Color:
            rgba: 0.592, 0.741, 0.969, 1
        Rectangle:
            pos: self.pos
            size: self.size
	Button:
		text: 'Show Your Work'
		on_press:
			root.manager.current = 'SocialMediaPage'
		size_hint: 0.8, 0.1
		pos: 55, 600
		
		background_color: 0.18, 0.5, 0.92, 1
			
	Button:
		text: 'Chat With Others'
		on_press:
			root.manager.current = 'SocialChat'
		size_hint: 0.8, 0.1
		pos: 55, 350
			
		background_color: 0.18, 0.5, 0.92, 1
		
            
    Button:
        text: 'Back'
        pos: 0, 0
        size_hint: 0.16, 0.1
        on_press: root.manager.current = 'GetInvolved'
        background_color: 0.18, 0.5, 0.92, 1