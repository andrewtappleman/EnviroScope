<FPAY>:
    name: "FPAY"
    canvas.before:
        Color:
            rgba: 0.592, 0.741, 0.969, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        pos: 55, 625
        size_hint: 0.8, 0.15
        TextInput:
            id: ZipcodeInfo
            text: ''
            pos: self.pos
            size: self.size
    
    BoxLayout:
        pos: 55, 450
        size_hint: 0.8, 0.15
        Label:
            color: 'black'
            id: InfoLabel
            text: 'Enter your zipcode above.  Try 13760 or 14901.\nThen press submit.'
            pos: self.pos
            font_size: 20

    BoxLayout:
        pos: 55, 275
        size_hint: 0.8, 0.15
        Button:
            text: 'Submit'
            pos: self.pos
            size: self.texture_size
            background_color: 0.4196, 0.7922, 0.9569, 1
            on_press: root.GiveInfo()
                
    Button:
        text: 'Back'
        pos: 0, 0
        size_hint: 0.16, 0.1
        on_press:
            root.manager.current = 'GetInformed'
        background_color: 0.4196, 0.7922, 0.9569, 1