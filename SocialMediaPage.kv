<SocialMediaPage>:
    name: "SocialMediaPage"
    canvas.before:
        Color:
            rgba: 0.592, 0.741, 0.969, 1
        Rectangle:
            pos: self.pos
            size: self.size


    BoxLayout:
        orientation: 'horizontal'
        pos: 0, 400
        size: 450, 250
        Image:
            id: ImageBefore1
            pos: self.pos
            size_hint: 1, 1
            allow_stretch: True
            texture: root.textureBefore1
        Image:
            id: ImageAfter1
            pos: self.pos
            size_hint: 1, 1
            allow_stretch: True
            texture: root.textureAfter1
        Label:
            text: root.name1
            color: 'black'
            pos: self.pos
            size: 0, 100
        Label:
            text: root.caption1
            color: 'black'
            pos: self.pos
            size: 0, 0
        

    BoxLayout:
        orientation: 'horizontal'
        pos: 0, 200
        size: 450, 200
        Image:
            id: ImageBefore2
            pos: self.pos
            size_hint: 1, 1
            allow_stretch: True
            texture: root.textureBefore2
        Image:
            id: ImageAfter2
            pos: self.pos
            size_hint: 1, 1
            allow_stretch: True
            texture: root.textureAfter2
        Label:
            text: root.name2
            color: 'black'
            pos: self.pos
            size: 0, 100
        Label:
            text: root.caption2
            color: 'black'
            pos: self.pos
            size: 0, 0
    
    BoxLayout:
        orientation: 'horizontal'
        pos: 0, 0
        size: 450, 200
        Image:
            id: ImageBefore3
            pos: self.pos
            size_hint: 1, 1
            allow_stretch: True
            texture: root.textureBefore3
        Image:
            id: ImageAfter3
            pos: self.pos
            size_hint: 1, 1
            allow_stretch: True
            texture: root.textureAfter3
        Label:
            text: root.name3
            color: 'black'
            pos: self.pos
            size: 0, 100
        Label:
            text: root.caption3
            color: 'black'
            pos: self.pos
            size: 0, 0


    Button:
        text: 'Back'
        size_hint: 0.16, 0.1
        pos_hint: {'x': 0, 'y': 0}
        on_press:
            root.manager.current = 'GetInvolved'
        background_color: 0.4196, 0.7922, 0.9569, 1
