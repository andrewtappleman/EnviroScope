<GetRewarded>:
    name: "GetRewarded"
	canvas.before:
		Color:
			rgba: 0.8, 1, 0.698, 1
		Rectangle:
			pos: self.pos
			size: self.size
		
	Button: 
		text: 'Leaderboard'
		on_press:
			root.manager.current = 'LeaderBoard'
		size_hint: 0.8, 0.1
		pos: 55, 600
	
		background_color: 0.0, 0.447, 0.071, 1
		
	Button:
		text: 'Daily Goals'
		on_press:
			root.manager.current = 'DailyGoals'
		size_hint: 0.8, 0.1
		pos: 55, 350
			
		background_color: 0.0, 0.447, 0.071, 1
			
			
	Button: 
		text: 'Back'
		on_press:
			root.manager.current = 'EnvironmentalIssues'
		size_hint: 0.16, 0.1
		pos: 0, 0
		
		background_color: 0.0, 0.447, 0.071, 1