<InstructPost>:
    name: "InstructPost"
    canvas.before:
        Color:
            rgba: 0.592, 0.741, 0.969, 1
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        HeaderWidget:
            size_hint_y: None
            height: 50
            pos_hint: {"x": 0.9, "y": 0.9}
    Label:
        text: 'To share your before and after photos, follow the directions.\nOn the top text input, put your before photo path.\nOn the second text input, put your after photo path.\nExample Path: "C:\\Users\\Kids\\Documents\\Python\\kivy_venv\\Bing.png"'
        color: 'black'
        size: self.size
        pos: self.pos
    Button:
        text: 'Continue'
        size_hint: 0.8, 0.15
        pos: 55, 0
        on_press:
            root.manager.current = 'PostMedia'
        background_color: 0.4196, 0.7922, 0.9569, 1
            