<FunFacts>
    name: "FunFacts"
    canvas.before:
        Color:
            rgba: 0.592, 0.741, 0.969, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        pos: 55, 675
        size_hint: 0.8, 0.1
        Label:
            color: 'black'
            text: 'Worldwide, about 160,000 plastic bags are produced per second.'
            pos: self.pos
            size: self.size
    BoxLayout:
        pos: 55, 550
        size_hint: 0.8, 0.05
        Label:
            color: 'black'
            text: 'By 2050, the worlds oceans could contain '
            pos: self.pos
            size: self.size
    
    BoxLayout:
        pos: 55, 530
        size_hint: 0.8, 0.05
        Label:
            color: 'black'
            text: 'more plastic than fish measured by weight.'
            pos: 55, 560
            size: self.size

    BoxLayout:
        pos: 55, 425
        size_hint: 0.8, 0.1
        Label:
            color: 'black'
            text: 'Air pollution contributes to millions of premature deaths annually.'
            pos: self.pos
            size: self.size

    BoxLayout:
        pos: 55, 300
        size_hint: 0.8, 0.05
        Label:
            color: 'black'
            text: 'The earth is about 1 million years old, '
            pos: self.pos
            size: self.size

    BoxLayout:
        pos: 55, 280
        size_hint: 0.8, 0.05
        Label:
            color: 'black'
            text: 'with more than 1 million species going extinct.'
            pos: 55, 310
            size: self.size

    BoxLayout:
        pos: 55, 175
        size_hint: 0.8, 0.1
        Label:
            color: 'black'
            text: '100 acres of rainforests are cut down every minute.'
            pos: self.pos
            size: self.size
    Button:
        text: 'Back'
        pos: 0,0
        size_hint: 0.16, 0.1
        on_press:
            root.manager.current = 'GetInformed'
        background_color: 0.4196, 0.7922, 0.9569, 1