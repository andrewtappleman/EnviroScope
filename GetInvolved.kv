<GetInvolved>:
    name: "GetInvolved"
	canvas.before:
		Color:
			rgba: 0.8, 1, 0.698, 1
		Rectangle:
			pos: self.pos
			size: self.size
	FloatLayout:
        HeaderWidget:
            size_hint_y: None
            height: 50
            pos_hint: {"x": 0.9, "y": 0.9}
	
	BoxLayout:
		pos: 55,100
		size_hint: 0.8, 0.8
		orientation: 'vertical'
		Button:
			text: 'Litter Sign Up Sheet'
			on_press:
				root.manager.current = 'LitterSheet'
			size: self.texture_size
			pos: 45, 675
			
			background_color: 0.0, 0.447, 0.071, 1
		Button:
			text: "Add A Clean Up"
			on_press: root.manager.current = 'AddAJob'
			size: self.texture_size
			pos: 45, 600

			background_color: 0.0, 0.447, 0.071, 1
		Button:
			text: "View Clean Up Info"
			on_press: root.manager.current = "ViewJobs"
			size: self.texture_size
			pos: 45, 550

			background_color: 0.0, 0.447, 0.071, 1
			
		Button:
			text: 'Social Media Page'
			on_press:
				root.manager.current = 'SocialMedia'
			size: self.texture_size
			pos: 45, 550
			
			background_color: 0.0, 0.447, 0.071, 1
			
		Button:
			text: 'Add a Post'
			on_press:
				root.manager.current = 'InstructPost'
			size: self.texture_size
			pos: 45, 425
			
			background_color: 0.0, 0.447, 0.071, 1
	
	Button:
		text: 'Back'
		on_press:
			root.manager.current = 'EnvironmentalIssues'
		size_hint: 0.16, 0.1
		pos: 0, 0
		background_color: 0.0, 0.447, 0.071, 1
