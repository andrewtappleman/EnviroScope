<PostMedia>:
    name: "PostMedia"
    canvas.before:
        Color:
            rgba: 0.592, 0.741, 0.969, 1
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        HeaderWidget:
            size_hint_y: None
            height: 50
            pos_hint: {"x": 0.9, "y": 0.9}
    
	BoxLayout:

		orientation: "vertical"
		size: root.width, 350
        pos: 0, 55

		padding: 50
		spacing: 20
        
		Image:
			id: my_image
			source: ""
            pos_x: self.pos
            pos_y: 700
            
        TextInput:
            id: beforePhoto
            size_hint: 1, 0.25
            pos_x: self.pos
            pos_y: 650
        
        Image:
			id: my_image2
			source: ""
            pos_x: self.pos
            pos_y: 500
            
        TextInput:
            id: afterPhoto
            pos_x: self.pos
            size_hint: 1, 0.25
            pos_y: 450
        
        TextInput:
            id: captionMedia
            size_hint: 1, 0.25
            pos_x: self.pos
            pos_y: 300
            text: "Hashtag"

    Button:
        text: 'Back'
        pos: 0, 0
        size_hint: 0.16, 0.1
        on_press:
            root.manager.current ='GetInvolved'
        background_color: 0.4196, 0.7922, 0.9569, 1
    
    Button:
        text: 'Check'
        pos: 90, 0
        size_hint: 0.16, 0.1
        on_press:
            root.Check(self)
        background_color: 0.4196, 0.7922, 0.9569, 1

    Button:
        text: 'Post'
        size_hint: 0.68, 0.1
        pos: 180, 0
        on_press: root.NotifyDef(self)
        background_color: 0.4196, 0.7922, 0.9569, 1