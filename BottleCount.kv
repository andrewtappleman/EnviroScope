<BottleCount>:
    name: 'BottleCount'
    canvas.before:
        Color:
            rgba: 0.592, 0.741, 0.969, 1
        Rectangle:
            pos: self.pos
            size: self.size
	BoxLayout:
		pos: 55, 500
		size_hint: 0.8, 0.2
        orientation:  'vertical'
		Label:
			text: 'Insert number of bottles picked up here'
			color: "black"
			text_size: self.width, None
    BoxLayout:
        pos: 55, 300
        size_hint: 0.8, 0.2
        TextInput: 
            text: 'Enter here'
            id: Enterhere1
            size: self.size 
    BoxLayout:
        pos:55, 100
        size_hint: 0.8, 0.2
		Button: 
            text: 'Enter'
            on_press:
                root.AddInfo()
    Button:
		text: 'Back'
		on_press:
			root.manager.current = 'Collective impact'
		size_hint: 0.16, 0.1 
		pos: 0, 0
		
		background_color: 0.18, 0.5, 0.92, 1
